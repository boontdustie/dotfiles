# Shortcuts and functions that take arguments
#Finder
alias o='open . &'

#Bundle
alias be="bundle exec"
alias beg='bundle exec guard -c'
alias bi='bundle install'

#Misc
alias zipr='zip -r'  # Zip all files in the directory
alias bs='source ~/.bashrc' # Source bash

#Git
alias g='git status'
alias gb='git branch'
alias gco='git checkout'
alias gd='git diff'
alias gp='git push origin master'
alias ga='git add'
alias gg='git commit -a'

#Nav
alias wrk="cd ~/work"
alias df="cd ~/bin/dotfiles"

#Rails
alias sb="rails c --sandbox"
